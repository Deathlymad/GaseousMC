package gaseousMC.deathlymad.block;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.world.World;

public class BlockSmoke extends Block {
	
	public int temp; //saves the temperature in Celsius
	
	public BlockSmoke(int par1) {
		super(par1, Material.air);
		this.setBlockUnbreakable();
		this.setLightOpacity(0);
		this.setTickRandomly(true);
		this.setUnlocalizedName("Smoke");
		
	}
	
	public int getDensity()
	{
		return 105102/(temp); //we are going to need a specific enum for different gases
	}
	
	public void onRandomTick ()
	{
	}
	
	@Override
	public void onNeighborTileChange(World w, int x, int y, int z, int tilex, int tiley, int tilez)//tick in case new smoke is spawned or smoke is moving
	{
		
	}
}
